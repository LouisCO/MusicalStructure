<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tag_style">
        <item name="android:layout_width">@dimen/button_width</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/colorPrimaryLight</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="list_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_toEndOf">@id/play_icon</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="grid_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:horizontalSpacing">@dimen/grid_sp</item>
        <item name="android:numColumns">auto_fit</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/button_padding</item>
        <item name="android:stretchMode">columnWidth</item>
        <item name="android:verticalSpacing">@dimen/grid_sp</item>
    </style>

    <style name="list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/button_padding</item>
    </style>

    <style name="list_img">
        <item name="android:layout_width">@dimen/icon_size</item>
        <item name="android:layout_height">@dimen/icon_size</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="album_sgs">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">@dimen/button_padding</item>
        <item name="android:paddingStart">@dimen/padd</item>
        <item name="android:paddingEnd">@dimen/padd</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

</resources>
